//Name
public class A1 {

	int PrinAmount ;
	int Rate ;
	int Time ;
	
	public void calSI(int p,int r, int t){
		PrinAmount = p;
		Rate = r;
		Time = t;
		int SI = (PrinAmount*Rate*Time)/(100);
		System.out.println("Simple interst is:"+SI);
	}
	
	public static void main(String[] args) {
	A1 a = new A1();
	a.calSI(100, 2, 2);
	}
	
}
